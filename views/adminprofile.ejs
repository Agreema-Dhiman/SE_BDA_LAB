    <h1 style="color:black;text-align: center;">BDA Lab Publications</h1>
    <form id="a" method="POST" action="/admin/addpubl">
        <button style="border-radius: 4px;background-color: aqua; color:black;border-color:#0F172B;font-family:'century gothic';">Add Publication</button>
    </form>
    </center>
    <table class="table">
        <thead>
            <tr>
                <th>Authors</th>
                <th>Publication in MLA format</th>
                <th>Title</th>
                <th>PDF URL/ LINK</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <%list.forEach((article)=>{%>
            <tr>
                <td><%= article.author1 %>,<%= article.author2 %>,<%= article.author3 %></td>
                <td><%= article.mla %></td>
                <td><%= article.title %></td>
                <td><a href="<%= article.pdf %>">Click</a></td>
                <td>
                    <a href="/admin/publedit/<%= article._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                    <a href="/admin/publdelete/<%= article._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                </td>
            </tr>
            <%})%>
        </tbody>
    </table>
</br>
